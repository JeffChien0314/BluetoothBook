<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppCompat_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="BtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150px</item>
        <item name="android:background">@drawable/selector_tab_btn_bg</item>
        <item name="android:textColor">@drawable/tab_btn_text_selector</item>
        <item name="android:textSize">28px</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">36px</item>
        <item name="android:paddingEnd">0px</item>
        <item name="android:drawablePadding">18px</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TransparentDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Phone -->
    <style name="KeypadButtonStyle">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">15px</item>
        <item name="android:paddingEnd">15px</item>
        <item name="android:paddingTop">10px</item>
        <item name="android:paddingBottom">10px</item>
        <!--<item name="android:background">?android:attr/selectableItemBackground</item>-->
        <item name="android:focusable">true</item>
    </style>

    <style name="KeypadNumber">
        <item name="android:layout_width">150px</item>
        <item name="android:layout_height">150px</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">66px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_dialpad_number_bg</item>
    </style>

    <style name="KeypadLetter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">66px</item>
    </style>

    <style name="KeypadImage">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:tint">@color/white</item>
    </style>
</resources>