<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_main_bg"
    tools:context=".ui.PhoneBookActivity">

    <LinearLayout
        android:id="@+id/category_layout"
        android:layout_width="270px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/tab_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/recents"
            style="@style/BtnStyle"
            android:text="@string/contact_recents"
            android:layout_marginTop="30px">
        </Button>

        <Button
            android:id="@+id/contacts"
            style="@style/BtnStyle"
            android:text="@string/contact_contacts">
        </Button>

        <Button
            android:id="@+id/messages"
            style="@style/BtnStyle"
            
android:visibility="gone"
            android:text="@string/contact_messages">
        </Button>

        <Button
            android:id="@+id/keypad"
            style="@style/BtnStyle"
            android:text="@string/contact_keypad">
        </Button>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:paddingLeft="60px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/category_layout"
        app:layout_constraintRight_toRightOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>